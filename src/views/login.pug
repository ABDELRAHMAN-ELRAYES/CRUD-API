extends home

block content
    .login-form-container
        //- form.submit-form(action="/users/login" method="POST")
        form.submit-form(action="/users/login" method="POST")
            h1.form-title Login
            .input-dev.email-input
                label(for="email") Email Address
                input.email(type="email" name="email" placeholder="Enter Your Email")
            .input-dev.pass-input
                label(for="password") Password
                input.pass(type="password" name="password" placeholder=".......")
            if(message)
                .message #{message}
            button.form-btn.login(type='submit') Login
            a.google-oauth-form(href="/auth/google")
                img(src="/img/icon/google-icon.png", alt="")
                p Sing in with Google
            .form-footer
                a(href="/forget-password") Forgot Password?
                a(href="/signup") Sign up