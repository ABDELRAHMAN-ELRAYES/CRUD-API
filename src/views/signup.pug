extends home

block content
    .signup-form-container
        form.submit-form(action="/users/signup" method="POST")
            h1.form-title Signup
            .first-input-content
                .input-dev.name-input
                    label(for="name") Full name
                    input(type="name" name="name" placeholder="Enter your name")
                .input-dev.email-input
                    label(for="email") Email Address
                    input(type="email" name="email" placeholder="Enter your Email")
            .second-input-content
                .input-dev.pass-input
                    label(for="password") Password
                    input.pas(type="password" name="password" placeholder="Enter your password")
                .input-dev.passConfirm-input
                    label(for="confirmPassword") confirm password
                    input.pas(type="password" name="confirmPassword" placeholder="Confirm your password")
            button.form-btn(type='submit') Signup
            .form-footer
                span Already have an account..?!
                a(href="/login") Login